		<div>
			<center>
			<h2>
			<a href="/parties/<%= @party.id %>/receipt">PROCEED TO CHECKOUT</a>
			</h2>
		</center>
		</div>
		
		<div class="left block">
			
			
				<table>	
						<h3>
							<th colspan="100%"><%= @party.name %>'s order</th>
							<% @party.foods.each do |food| %>
							<tr>
								<td><%= food.name.upcase %></td>				
								<td>
									<form action="/parties/<%= @party.id %>/orders" method="post">
										<input type="hidden" name="_method" value="delete">
										<input type="hidden" name="food_id" value="<%= food.id %>" >
										<div class="myButton3">
										<input type="submit" value='REMOVE'>
										</div>
									</form>
								</td>
							</tr>
							<% end %>
						</h3>
				</table>

			</div>
		<div class="right block">
			<table>
				<h2>
					<th colspan="100%">Menu</th>

						<% @foods.each do |f| %>
								<tr>
									<td>
								<form action="/parties/<%= @party.id %>" method="post" />
								  <input type="hidden" name="_method" value="patch" />
									<input type="hidden" name="food_id" value="<%= f.id %>"/>
									<input type="hidden" name="party_id" value="<%= @party %>"/>
									<div class="myButton4">
									<input type="submit" value="<%= f.name %>" />
									</div>
								</form>
							</td>
							</tr>
						<% end %>
				</h2>
			</table>
</div>